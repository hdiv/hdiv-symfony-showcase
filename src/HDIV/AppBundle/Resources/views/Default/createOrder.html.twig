{% extends 'HDIVAppBundle:Default:index.html.twig' %}

{% block pagecontent %}

    <div class="row">
    <div class="col-lg-12">
    <!-- col-lg-12 start here -->
    <div class="panel panel-default plain toggle panelMove panelClose panelRefresh" id="dyn_0">
    <!-- Start .panel -->
    <div class="panel-heading">
        <h3>New order</h3>
        <div class="panel-controls panel-controls-right"><a href="#" class="panel-refresh"><i class="fa fa-circle-o"></i></a><a href="#" class="toggle panel-minimize"><i class="fa fa-angle-up"></i></a><a href="#" class="panel-close"><i class="fa fa-times"></i></a></div></div>
        <div class="panel-body">

                {{ form_start(form, {'attr': {'class': 'form-horizontal no-margin form-border', 'id': 'formToggleLine'} })}}


                {% if not form.vars.valid %}
                    <div class="alert alert-danger fade in">
                        {{ form_errors(form.shippingAddress) }}
                        {{ form_errors(form.amount) }}
                        {{ form_errors(form.message) }}
                        {{ form_errors(form.company) }}
                        {{ form_errors(form.internationalOrder) }}                        
                        {{ form_errors(form.email) }}
                        {{ form_errors(form.phone) }}
                        {{ form_errors(form.bankAccount) }}
                    </div>
                {% endif %}

                <div class="form-group">
                    <label class="col-lg-2 control-label">Shipping address</label>
                    <div class="col-lg-10">
                        {{ form_widget(form.shippingAddress, { 'attr': {'class': 'form-control', 'placeholder': 'Shipping address...'} }) }}
                    </div><!-- /.col -->
                </div><!-- /form-group -->
                <div class="form-group">
                    <label class="col-lg-2 control-label">Amount</label>
                    <div class="col-lg-10">
                        {{ form_widget(form.amount, { 'attr': {'class': 'form-control', 'placeholder': 'Amount...'} }) }}
                    </div><!-- /.col -->
                </div>
                <div class="form-group">
                    <label class="col-lg-2 control-label">Company</label>
                    <div class="col-lg-10">
                        {{ form_widget(form.company, { 'attr': {'class': 'form-control', 'placeholder': 'Company...'} }) }}
                    </div><!-- /.col -->
                </div>
                <div class="form-group">
                    <label class="col-lg-2 control-label">Email</label>
                    <div class="col-lg-10">
                        {{ form_widget(form.email, { 'attr': {'class': 'form-control', 'placeholder': 'Email...'} }) }}
                    </div><!-- /.col -->
                </div>
                <div class="form-group">
                    <label class="col-lg-2 control-label">Bank Account</label>
                    <div class="col-lg-10">
                        {{ form_widget(form.bankAccount, { 'attr': {'class': 'form-control', 'placeholder': 'Bank account...'} }) }}
                    </div><!-- /.col -->
                </div>
                 <div class="form-group">
                    <label class="col-lg-2 control-label">International Order?</label>
                    <div class="col-lg-10">
                      {{ form_widget(form.internationalOrder, { 'attr': {'class': 'form-control'} }) }}
                      </div><!-- /.col -->
                </div>
                 <div class="form-group">
                    <label class="col-lg-2 control-label">Invoice?</label>
                    <div class="col-lg-10">
                      {{ form_widget(form.checkbox)}}
                      </div><!-- /.col -->
                </div>                                
                <div class="form-group">
                    <label class="col-lg-2 control-label">Phone</label>
                    <div class="col-lg-10">
                        {{ form_widget(form.phone, { 'attr': {'class': 'form-control', 'placeholder': 'Phone...'} }) }}
                    </div><!-- /.col -->
                </div>
                <div class="form-group">
                    <label class="col-lg-2 control-label">Message</label>
                    <div class="col-lg-10">
                        {{ form_widget(form.message, { 'attr': {'rows': '3', 'class': 'form-control', 'placeholder': 'Message...'} }) }}
                    </div><!-- /.col -->
                </div><!-- /form-group -->
                <div class="form-group">
                    <label class="col-lg-2 control-label"></label>
                    <div class="col-lg-10">
                        {{ form_widget(form.newOrder, { 'attr': {'class': 'btn btn-success btn-sm'} }) }}
                    </div><!-- /.col -->
                </div><!-- /form-group -->
                {{ form_end(form) }}
{% endblock %}